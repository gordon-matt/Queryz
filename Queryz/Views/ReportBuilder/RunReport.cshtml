        @*<script type="text/javascript" src="~/lib/jQuery-QueryBuilder/dist/js/query-builder.standalone.js"></script>*@
        <script type="text/javascript" src="~/jQuery-QueryBuilder/js/query-builder.standalone.js"></script>
    </environment>
