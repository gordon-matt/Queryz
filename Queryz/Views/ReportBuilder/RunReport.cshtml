        @*<script src="//cdn.jsdelivr.net/npm/jQuery-QueryBuilder@2.5.2/dist/js/query-builder.standalone.min.js" integrity="sha256-4rWMoTWg5M29tfAmyIL4/Jpi8yN7ea+1/r//9lDrjcQ=" crossorigin="anonymous"></script>*@
